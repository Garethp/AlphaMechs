<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Apiarist -->  
    <ThingDef ParentName="LightMechanoid">
      <defName>AM_Mech_Apiarist</defName>
      <label>apiarist</label>
      <description>A small winged bee-shaped mechanoid designed to take care of beekeeping tasks. Almost useless in combat.\n\n&lt;color=#E5E54C&gt;Special abilities:&lt;/color&gt; Hovers over terrain, ignoring terrain movement costs.</description>
      <tools>
        <li>
          <label>head</label>
          <capacities>
            <li>Blunt</li>
          </capacities>
          <power>4</power>
          <cooldownTime>2.6</cooldownTime>
          <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
          <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        </li>
      </tools>
     
      <race>
        <body>AM_Mech_Winged_Body</body>
        <mechEnabledWorkTypes>
          <li>RB_BeekeepingWork</li>      
        </mechEnabledWorkTypes>
		
        <mechWorkTypePriorities>
          <RB_BeekeepingWork>2</RB_BeekeepingWork>
        </mechWorkTypePriorities>
        <lifeStageAges>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>0</minAge>
            <soundWounded>Pawn_Mech_WarUrchin_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_WarUrchin_Death</soundDeath>
            <soundCall>Pawn_Mech_WarUrchin_Call</soundCall>
          </li>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>100</minAge>
            <soundWounded>Pawn_Mech_WarUrchin_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_WarUrchin_Death</soundDeath>
            <soundCall>Pawn_Mech_WarUrchin_Call</soundCall>
          </li>
        </lifeStageAges>
      </race>
    </ThingDef>
    
    <PawnKindDef ParentName="NonCombatLightMechanoidKind">
       <defName>AM_Mech_Apiarist</defName>
      <label>apiarist</label>
      <race>AM_Mech_Apiarist</race>
      <lifeStages>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/AM_Apiarist/AM_Apiarist_Clean</texPath>
            <maskPath>Things/Pawn/Mechanoid/AM_Apiarist/AllegianceOverlays/AM_Apiarist_Overlay</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>2</drawSize>
          </bodyGraphicData>
        </li>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/AM_Apiarist/AM_Apiarist</texPath>
            <maskPath>Things/Pawn/Mechanoid/AM_Apiarist/AllegianceOverlays/AM_Apiarist_Overlay</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>2</drawSize>
          </bodyGraphicData>
        </li>
      </lifeStages>      
    </PawnKindDef>

</Defs>