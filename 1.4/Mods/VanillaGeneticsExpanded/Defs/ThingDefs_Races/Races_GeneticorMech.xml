<Defs>

    <!-- Geneticor -->  
    <ThingDef ParentName="LightMechanoid">
      <defName>AM_Mech_Geneticor</defName>
      <label>geneticor</label>
      <description>A small research mechanoid designed to help with genetic engineering tasks. Very inefficient in combat.</description>
          
      <race>
        <body>Mech_Light</body>
        <mechEnabledWorkTypes>
          <li>GR_Genetics</li>      
        </mechEnabledWorkTypes>
		
        <mechWorkTypePriorities>
          <GR_Genetics>2</GR_Genetics>
        </mechWorkTypePriorities>
        <lifeStageAges>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>0</minAge>
            <soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_Militor_Death</soundDeath>
            <soundCall>Pawn_Mech_Militor_Call</soundCall>
          </li>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>100</minAge>
             <soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_Militor_Death</soundDeath>
            <soundCall>Pawn_Mech_Militor_Call</soundCall>
          </li>
        </lifeStageAges>
      </race>
    </ThingDef>
    
